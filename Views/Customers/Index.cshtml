@model List<pinewood_crud_app.Models.Customer>

    <div class="row">
        <div class="col-md-12">
            <a asp-action="Create" asp-controller="Customers" class="btn btn-success">Create</a>
        </div>
    </div>

     <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Email</td>
                        <td>Address</td>
                        <td>Manage</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Customers" asp-route-id="@item.Id">Edit</a>
                                <a asp-action="Delete" asp-controller="Customers" asp-route-id="@item.Id">Delete</a>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>