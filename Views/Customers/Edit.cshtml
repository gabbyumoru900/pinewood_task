@model pinewood_crud_app.Models.Customer

<form asp-action="Edit" asp-area="Customers" method="post">
    <input type="hidden" asp-for="Id">
    <div class="row">
      <div class="col-lg-12">
            <div class="form-group">
                <label>Name: </label>
                <input asp-for="Name" type="text" class="form-control required" placeholder="Enter Customers Name" tabindex="1">
            </div>
            <div class="form-group">
                <label>Email: </label>
                <input asp-for="Email" type="text" class="form-control required" placeholder="Enter Customers Email" tabindex="1">
            </div>
            <div class="form-group">
                <label>Address: </label>
                <input asp-for="Address" type="text" class="form-control required" placeholder="Enter Customers Address" tabindex="1">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">Update Customer</button>
                    <a asp-action="Index" asp-controller="Customers" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>  

</form>
